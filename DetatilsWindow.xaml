<Window x:Class="WPF_PROJECT.DetatilsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PROJECT"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Title="Phone Details" Height="600" Width="600">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" Header="Általános">
                <StackPanel>
                    <StackPanel Margin="0 6">
                        <Label Content="Név:"/>
                        <TextBox Margin="20 0" Text="{Binding onePhone.Name}"/>
                    </StackPanel>
                    <StackPanel Margin="0 6">
                        <Label Content="Kiadás éve:"/>
                        <TextBox Margin="20 0" Text="{Binding onePhone.Release}"/>
                    </StackPanel>
                    <StackPanel Margin="0 6">
                        <Label Content="Fő kamera: (Megapixelek)"/>
                        <TextBox Margin="20 0" Text="{Binding onePhone.Main_camera}"/>
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Battery:"/>
                        <TextBox Margin="20 0" Text="{Binding onePhone.Battery}"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Grid.Row="1" Header="Eljárások">
                <StackPanel>
                    <Button Click="Button_Click">Mentés</Button>
                    <Button x:Name="btnCancel" Click="btnCancel_Click">Mégsem</Button>
                </StackPanel>
            </GroupBox>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" Header="Operációs Rendszer">
                <StackPanel>
                    <StackPanel>
                        <Label Content="Típus:"/>
                        <TextBox Margin="20 0" Text="{Binding onePhone.Rom.Type}"/>
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Verzió:"/>
                        <TextBox Margin="20 0" Text="{Binding onePhone.Rom.Version}"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Row="1" Header="Képernyő">
                <StackPanel>
                    <StackPanel>
                        <Label Content="Technológia:"/>
                        <TextBox Margin="20 0" Text="{Binding onePhone.Display.Type}"/>
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Méret (inch):"/>
                        <TextBox Margin="20 0" Text="{Binding onePhone.Display.Size}"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
