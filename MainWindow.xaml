<Window x:Class="WPF_PROJECT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PROJECT"
        mc:Ignorable="d"
        Title="Telefon Nyilvántartás" Height="450" Width="600" Closed="Window_Closed">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListView Margin="10" x:Name="Lv_Data" ItemsSource="{Binding FilteredPhones}" SelectedItem="{Binding SelectedItem}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Cursor="Hand" Margin="0 4">
                        <TextBlock Text="{Binding Name}" FontSize="20"/>
                        <TextBlock Text="{Binding Release}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <GroupBox Header="Kereső" Grid.Row="0">
                <StackPanel>
                    <TextBox x:Name="Tb_Search" Height="30" Margin="0, 5" Text="{Binding SearchString}"></TextBox>
                    <Button x:Name="Btn_Search" Click="Btn_Search_Click">Keresés</Button>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Eljárások" Grid.Row="1">
                <StackPanel>
                    <Button x:Name="Btn_New" Click="Btn_New_Click">Új felvétele</Button>
                    <Button x:Name="Btn_Modify" Click="Btn_Modify_Click" IsEnabled="{Binding HaveSelectedItem}">Módosítás</Button>
                    <Button x:Name="Btn_Delete" Click="Btn_Delete_Click" IsEnabled="{Binding HaveSelectedItem}">Törlés</Button>
                </StackPanel>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
