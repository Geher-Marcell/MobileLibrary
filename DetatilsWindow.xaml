<Window x:Class="WPF_PROJECT.DetatilsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PROJECT"
        mc:Ignorable="d"
        Title="Phone Details" Height="500" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <StackPanel>
                <Label Content="Name:"/>
                <TextBox Margin="20 0" Text="{Binding onePhone.Name}"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Display type:"/>
                <TextBox Margin="20 0" Text="{Binding onePhone.Display.Type}"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Display size:"/>
                <TextBox Margin="20 0" Text="{Binding onePhone.Display.Size}"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Release:"/>
                <TextBox Margin="20 0" Text="{Binding onePhone.Release}"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Battery:"/>
                <TextBox Margin="20 0" Text="{Binding onePhone.Battery}"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Rom type:"/>
                <TextBox Margin="20 0" Text="{Binding onePhone.Rom.Type}"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Rom version:"/>
                <TextBox Margin="20 0" Text="{Binding onePhone.Rom.Version}"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Main camera:"/>
                <TextBox Margin="20 0" Text="{Binding onePhone.Main_camera}"/>
            </StackPanel>

        </StackPanel>

        <Button Grid.Row="1" Margin="20 10" FontSize="20" Click="Button_Click">Mentés</Button>
    </Grid>
</Window>
